<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign3"
            android:text="⟵"
            android:textSize="50sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign3"
            android:text="√"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign3"
            android:text="%"
            android:textSize="32sp"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign2"
            android:onClick="funcCh"
            android:text="÷"
            android:textSize="32sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            android:text="7"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonEg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            android:text="8"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            android:text="9"
            android:textSize="32sp"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign2"
            android:onClick="funcCh"
            android:text="+"
            android:textSize="32sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            android:text="4"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            android:text="5"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            android:text="6"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonMin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign2"
            android:onClick="funcCh"
            android:text="-"
            android:textSize="32sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            android:text="1"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonTow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            android:text="2"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonTr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            android:text="3"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign2"
            android:onClick="funcCh"
            android:text="x"
            android:textSize="32sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign2"
            android:onClick="resetCalculator"
            android:text="AC"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:onClick="numFunc"
            android:text="0"
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:text="."
            android:textSize="32sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonComper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttondesign2"
            android:onClick="calculate"
            android:text="="
            android:textSize="32sp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>